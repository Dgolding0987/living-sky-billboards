<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Living Sky Billboards — Billboard Advertising Saskatoon & Hwy 219 / Hwy 11</title>
  <meta name="description" content="Living Sky Billboards — premium static billboard rentals across Saskatoon, Highway 219 (to Dakota Dunes Casino) and Highway 11 (to Blackstrap & Clavet). Request a quote today." />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Montserrat:wght@600;700&display=swap" rel="stylesheet">

  <!-- Leaflet CSS (for interactive map) -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-sA+e2bZ1b9g6v3g6pr6z5u8iQ4TiaM3fQ0pQv+0rWyk=" crossorigin=""/>

  <style>
    :root{
      --navy: #0b2b3a; /* deep navy for trust */
      --sky: #3aa0d8; /* sky blue accent */
      --sun-1: #ffb03b; /* warm gold */
      --sun-2: #ff7b2d; /* orange */
      --muted: #6b7280; /* muted text */
      --bg: #ffffff;
      --card: #f8fafc;
      --radius: 10px;
      --max-width: 1100px;
    }
    html,body{height:100%;margin:0;font-family: 'Lato', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; color:var(--navy); background:var(--bg); -webkit-font-smoothing:antialiased;}
    .container{max-width:var(--max-width);margin:0 auto;padding:0 20px;}
    header{background:linear-gradient(180deg, rgba(255,255,255,0.98), rgba(255,255,255,0.98)); position:sticky; top:0; z-index:1000; border-bottom:1px solid #eee;}
    .topbar{display:flex;align-items:center;justify-content:space-between;padding:18px 0;}
    .brand{display:flex;align-items:center;gap:12px;}
    .brand .logo{width:56px;height:56px;border-radius:8px;background:linear-gradient(90deg,var(--sun-1),var(--sun-2));display:flex;align-items:center;justify-content:center;box-shadow:0 2px 8px rgba(0,0,0,0.08);}
    .brand .logo svg{width:38px;height:38px;}
    .brand .title{font-family:'Montserrat',sans-serif;font-weight:700;letter-spacing:0.4px;color:var(--navy);}
    nav{display:flex;gap:20px;align-items:center;}
    nav a{color:var(--navy);text-decoration:none;font-weight:600;font-size:15px;}
    .cta-btn{padding:10px 16px;background:linear-gradient(90deg,var(--sun-1),var(--sun-2)); color:white;border:none;border-radius:999px;font-weight:700;cursor:pointer;box-shadow:0 6px 18px rgba(255,123,45,0.12);}
    .cta-btn:active{transform:translateY(1px);}
    .hero{display:flex;align-items:center;gap:40px;padding:48px 0 64px;}
    .hero-content{flex:1}
    .hero h1{font-family:'Montserrat',sans-serif;font-weight:700;margin:0;font-size:40px;line-height:1.05;color:var(--bg); text-shadow:0 2px 12px rgba(0,0,0,0.25);}
    .hero p{color:rgba(255,255,255,0.95);font-size:18px;margin:14px 0 22px;}
    .hero .hero-ctas{display:flex;gap:12px;}
    .btn-outline{padding:10px 18px;border-radius:999px;border:2px solid rgba(255,255,255,0.95);background:transparent;color:white;font-weight:700;cursor:pointer;}
    .hero-visual{width:420px;height:260px;background:transparent;border-radius:12px;overflow:hidden;box-shadow:0 6px 30px rgba(11,43,58,0.18);}
    section{padding:40px 0;}
    .features{display:grid;grid-template-columns:repeat(3,1fr);gap:20px;margin-top:18px;}
    .feature{background:var(--card);padding:18px;border-radius:12px;text-align:center;}
    .feature h3{margin:10px 0 6px;font-family:'Montserrat',sans-serif;font-size:18px;color:var(--navy);}
    .feature p{color:var(--muted);margin:0;font-size:14px}
    .two-col{display:grid;grid-template-columns:1fr 380px;gap:28px;align-items:start;}
    .card{background:var(--card);padding:18px;border-radius:12px}
    #map{width:100%;height:380px;border-radius:10px;border:1px solid #e6eef6;overflow:hidden;}
    .estimator{display:flex;gap:18px;align-items:center;margin-top:8px;}
    .estimator select,input{padding:12px;border-radius:10px;border:1px solid #e6eef6;background:white;font-size:15px}
    .estimate-output{background:linear-gradient(90deg,var(--sun-1),var(--sun-2));color:white;padding:12px 18px;border-radius:10px;font-weight:700;}
    footer{border-top:1px solid #eee;padding:22px 0;margin-top:24px;color:var(--muted);font-size:14px;}
    footer .cols{display:flex;gap:40px;flex-wrap:wrap;justify-content:space-between}
    footer a{color:var(--muted);text-decoration:none}
    @media (max-width:1000px){
      .two-col{grid-template-columns:1fr;}
      .features{grid-template-columns:repeat(1,1fr)}
      .hero{flex-direction:column;align-items:flex-start}
      .hero-visual{width:100%;height:220px}
      nav{display:none}
    }
    @media (max-width:480px){
      .brand .title{font-size:16px}
      .hero h1{font-size:28px}
    }
    .fade-up{opacity:0;transform:translateY(8px);transition:all 600ms cubic-bezier(.2,.9,.3,1);}
    .fade-up.visible{opacity:1;transform:none;}
  </style>
</head>
<body>
  <header>
    <div class="container">
      <div class="topbar">
        <div class="brand">
          <div class="logo">
            <!-- Example SVG logo, you may replace it -->
            <svg viewBox="0 0 48 48"><rect x="8" y="16" width="32" height="16" rx="5" fill="#fff"/><rect x="14" y="22" width="20" height="4" rx="2" fill="#ffb03b"/></svg>
          </div>
          <span class="title">Living Sky Billboards</span>
        </div>
        <nav>
          <a href="#locations">Locations</a>
          <a href="#pricing">Pricing</a>
          <a href="#contact">Contact</a>
          <button class="cta-btn" onclick="document.getElementById('contact').scrollIntoView({behavior:'smooth'})">Request a Quote</button>
        </nav>
      </div>
    </div>
  </header>
  <div style="background:linear-gradient(90deg,var(--navy) 55%,var(--sky) 100%);">
    <div class="container hero">
      <div class="hero-content">
        <h1>Billboard Advertising <br>Saskatoon & Highways</h1>
        <p>Premium static billboard rentals across Saskatoon, Highway 219 (to Dakota Dunes Casino), and Highway 11 (to Blackstrap & Clavet). Reach thousands daily — your brand, always in sight.</p>
        <div class="hero-ctas">
          <button class="cta-btn" onclick="document.getElementById('contact').scrollIntoView({behavior:'smooth'})">Get Pricing</button>
          <button class="btn-outline" onclick="document.getElementById('locations').scrollIntoView({behavior:'smooth'})">See Locations</button>
        </div>
      </div>
      <div class="hero-visual">
        <!-- Placeholder for a billboard image or map -->
        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=600&q=80" alt="Billboard" style="width:100%;height:100%;object-fit:cover;">
      </div>
    </div>
  </div>

  <section>
    <div class="container">
      <div class="features">
        <div class="feature">
          <h3>High-Traffic Locations</h3>
          <p>Strategically placed billboards on Saskatoon’s busiest commuter routes & highways — maximum daily impressions.</p>
        </div>
        <div class="feature">
          <h3>Flexible Rentals</h3>
          <p>Monthly, quarterly, or annual terms. Choose the location & duration that fits your budget and campaign goals.</p>
        </div>
        <div class="feature">
          <h3>Easy Setup</h3>
          <p>We handle installation, maintenance, and artwork — it’s hassle-free advertising, start to finish.</p>
        </div>
      </div>
    </div>
  </section>

  <section id="locations">
    <div class="container">
      <h2>Billboard Locations</h2>
      <div class="two-col">
        <div>
          <ul>
            <li><strong>Highway 219 (Dakota Dunes Casino)</strong> — 4 faces, 2 locations</li>
            <li><strong>Highway 11 (Blackstrap, Clavet)</strong> — 6 faces, 3 locations</li>
            <li><strong>Saskatoon South City</strong> — 2 faces, near major retail & traffic corridors</li>
          </ul>
          <p style="color:var(--muted);margin-top:10px;">All locations feature illuminated, full-size static billboards. Custom sizes available.</p>
        </div>
        <div class="card">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </section>

  <section id="pricing">
    <div class="container">
      <h2>Pricing & Estimator</h2>
      <p>Billboard rates vary based on location and rental term. Estimate your campaign below, or <a href="#contact">request a custom quote</a>.</p>
      <div class="estimator">
        <select id="location-select">
          <option value="hwy219">Hwy 219 (Casino)</option>
          <option value="hwy11">Hwy 11 (Blackstrap/Clavet)</option>
          <option value="city">Saskatoon South City</option>
        </select>
        <select id="term-select">
          <option value="1">1 month</option>
          <option value="3">3 months</option>
          <option value="12">12 months</option>
        </select>
        <button class="cta-btn" onclick="estimatePrice()">Estimate</button>
        <span id="estimate" class="estimate-output"></span>
      </div>
      <script>
        function estimatePrice() {
          var loc = document.getElementById('location-select').value;
          var term = parseInt(document.getElementById('term-select').value,10);
          var base = {"hwy219": 950, "hwy11": 790, "city": 1200}[loc];
          var discount = term === 12 ? 0.82 : (term === 3 ? 0.93 : 1);
          var price = Math.round(base * term * discount);
          document.getElementById('estimate').textContent = "$" + price + " CAD";
        }
      </script>
    </div>
  </section>

  <section id="contact">
    <div class="container">
      <h2>Request a Quote</h2>
      <div class="two-col">
        <form method="POST" action="mailto:info@livingskybillboards.ca" style="max-width:380px;">
          <label>Name<br>
            <input type="text" name="name" required style="width:100%;margin-bottom:12px;">
          </label>
          <label>Email<br>
            <input type="email" name="email" required style="width:100%;margin-bottom:12px;">
          </label>
          <label>Message<br>
            <textarea name="message" required rows="4" style="width:100%;margin-bottom:12px;"></textarea>
          </label>
          <button class="cta-btn" type="submit">Send</button>
        </form>
        <div>
          <div class="card" style="margin-bottom:10px;">
            <strong>Email:</strong> <a href="mailto:info@livingskybillboards.ca">info@livingskybillboards.ca</a><br>
            <strong>Phone:</strong> <a href="tel:+13065555555">(306) 555-5555</a>
          </div>
          <div style="color:var(--muted);font-size:14px;">We'll respond within 1 business day. For urgent inquiries, please call.</div>
        </div>
      </div>
    </div>
  </section>

  <footer>
    <div class="container">
      <div class="cols">
        <div>© 2025 Living Sky Billboards</div>
        <div>
          <a href="#locations">Locations</a> &nbsp;|&nbsp;
          <a href="#pricing">Pricing</a> &nbsp;|&nbsp;
          <a href="#contact">Contact</a>
        </div>
        <div>
          Saskatoon, SK &middot; <a href="mailto:info@livingskybillboards.ca">info@livingskybillboards.ca</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Leaflet.js for interactive map -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-o9N1j6kF1fU1g8eU06kqA2r1pGz7rj9nHMooh1M8lCM=" crossorigin=""></script>
  <script>
    window.onload = function() {
      var map = L.map('map').setView([52.027, -106.7], 10);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      // Example billboard locations
      var locations = [
        {lat:52.014, lng:-106.624, label:"Hwy 219 Billboard"},
        {lat:52.068, lng:-106.498, label:"Hwy 11 Billboard"},
        {lat:52.091, lng:-106.615, label:"South Saskatoon Billboard"}
      ];
      locations.forEach(function(loc){
        L.marker([loc.lat,loc.lng])
          .addTo(map)
          .bindPopup(loc.label);
      });
    };
    // Animation for fade-up
    window.addEventListener('scroll',()=>{
      document.querySelectorAll('.fade-up').forEach(function(el){
        if(el.getBoundingClientRect().top < window.innerHeight - 40){
          el.classList.add('visible');
        }
      });
    });
  </script>
</body>
</html>
